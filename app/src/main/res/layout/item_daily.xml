<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_8_dp"
    android:paddingLeft="@dimen/size_8_dp"
    android:paddingEnd="@dimen/size_8_dp"
    android:paddingRight="@dimen/size_8_dp">

    <TextView
        android:id="@+id/txt_daily_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_daily_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@dimen/size_8_dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:contentDescription="@string/app_name"
        android:id="@+id/img_daily_icon"
        android:layout_width="@dimen/size_30_dp"
        android:layout_height="@dimen/size_30_dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/txt_daily_pop"
        app:layout_constraintRight_toLeftOf="@+id/txt_daily_pop"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>